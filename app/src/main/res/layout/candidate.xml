<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.profa.client.MainActivity">


    <TextView
        android:id="@+id/voterID"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint=""
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold|italic"
        android:layout_marginTop="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/radioGroup"
        android:layout_above="@+id/vote"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="46dp">

        <RadioButton
            android:id="@+id/candidate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidateID"
            android:layout_marginTop="75dp"
            android:onClick="onRadioButtonClicked"
            android:text="Wonder Women" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate1"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/candidate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate1"
            android:onClick="onRadioButtonClicked"
            android:text="Spider Man" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate2"
            android:layout_marginTop="1dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/candidate3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate2"
            android:onClick="onRadioButtonClicked"
            android:text="Captain American" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate3"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/candidate4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate3"
            android:onClick="onRadioButtonClicked"
            android:text="Storm" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate4"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="italic" />

        <RadioButton
            android:id="@+id/candidate5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate4"
            android:onClick="onRadioButtonClicked"
            android:text="Wolverine" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate5"
            android:layout_marginTop="1dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:text=""
            android:textAlignment="viewStart"
            android:textColor="@android:color/darker_gray"
            android:textSize="12sp"
            android:textStyle="italic" />


    </RadioGroup>

    <TextView
        android:id="@+id/electionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/voterID"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <Button
        android:id="@+id/vote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:text="Votar "
        android:layout_marginBottom="38dp"
        android:layout_above="@+id/close"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@android:color/holo_orange_dark"
        android:text="Fechar Urna"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>

