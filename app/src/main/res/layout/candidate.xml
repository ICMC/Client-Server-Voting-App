<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.profa.client.MainActivity">


    <TextView
        android:id="@+id/voterID"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:hint=""
        android:textAlignment="center"
        android:textColor="@android:color/darker_gray"
        android:textStyle="bold|italic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="11dp"
        />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="46dp"
        android:id="@+id/radioGroup">

        <RadioButton
            android:id="@+id/candidate1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidateID"
            android:layout_marginTop="75dp"
            android:onClick="onRadioButtonClicked"
            android:text="Wonder Women" />

        <RadioButton
            android:id="@+id/candidate2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate1"
            android:onClick="onRadioButtonClicked"
            android:text="Spider Man" />

        <RadioButton
            android:id="@+id/candidate3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate2"
            android:onClick="onRadioButtonClicked"
            android:text="Captain American" />

        <RadioButton
            android:id="@+id/candidate4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate3"
            android:onClick="onRadioButtonClicked"
            android:text="Storm" />

        <RadioButton
            android:id="@+id/candidate5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/candidate4"
            android:onClick="onRadioButtonClicked"
            android:text="Wolverine" />


    </RadioGroup>

    <TextView
        android:id="@+id/electionTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text=""
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@+id/voterID"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/vote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/colorAccent"
        android:text="Votar "
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="66dp" />


</RelativeLayout>

